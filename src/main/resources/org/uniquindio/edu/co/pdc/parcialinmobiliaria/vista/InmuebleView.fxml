<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.uniquindio.edu.co.pdc.parcialinmobiliaria.controllers.InmuebleController">

    <top>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Registro de Inmuebles" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="8">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="Tipo:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <ComboBox fx:id="cmbTipo" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Código:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="txtCodigo" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Ciudad:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <TextField fx:id="txtCiudad" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Habitaciones:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <TextField fx:id="txtHabitaciones" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Pisos:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="txtPisos" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Precio:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <TextField fx:id="txtPrecio" GridPane.rowIndex="5" GridPane.columnIndex="1" />

                <HBox spacing="10" GridPane.rowIndex="6" GridPane.columnIndex="1">
                    <Button text="Agregar Inmueble"
                            fx:id="btnAgregar"
                            onAction="#agregarInmueble"
                            GridPane.rowIndex="6"
                            GridPane.columnIndex="1"
                            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" />
                    <Button text="Eliminar Inmueble"
                            fx:id="btnEliminar"
                            onAction="#eliminarInmueble"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </GridPane>
        </VBox>
    </top>

    <center>
        <TableView fx:id="tablaInmuebles" prefHeight="250" prefWidth="600">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <columns>
                <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120" />
                <TableColumn fx:id="colCodigo" text="Código" prefWidth="100" />
                <TableColumn fx:id="colCiudad" text="Ciudad" prefWidth="120" />
                <TableColumn fx:id="colHabitaciones" text="Habitaciones" prefWidth="100" />
                <TableColumn fx:id="colPisos" text="Pisos" prefWidth="80" />
                <TableColumn fx:id="colPrecio" text="Precio" prefWidth="120" />
            </columns>
        </TableView>
    </center>

</BorderPane>